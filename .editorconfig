# EditorConfig - consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefile
[{Makefile,*.mk}]
indent_style = tab

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx,mjs}]
indent_size = 2

# Proto files
[*.proto]
indent_size = 2
